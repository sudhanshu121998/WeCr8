    <!-- Smooth scrolling -->

    <script>
        $(window).scroll(function () {
            var scroll = $(window).scrollTop();
            if (scroll >= 300) {
                $("header").addClass("header-shadow");
            } else {
                $("header").removeClass("header-shadow");
            }
        });
    </script>
